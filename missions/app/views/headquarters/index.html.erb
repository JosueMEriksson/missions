<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Base de operaciones</h1>

<h4>Jefe al mando: <%= @player.name %> | Dinero: <%= @player.money %></h4>
<p><%= link_to 'Mensajes', info_index_path %></p>

<h3><%= link_to 'Misiones', missions_path %></h3>
<% @missions.each do |mission| %>
	<div class="entry">
		<b><%= mission.title %></b>
		<%= mission.reward %>
		<%= status_mission(mission.status) %>
		<% if mission.agent %>
			<%= mission.agent.name %>
		<% end %>
	</div>
<% end %>

<h3><%= link_to 'Agentes', agents_path %></h3>
<% @agents.each do |agent| %>
	<div class="entry">
		<b><%= agent.name %></b>
		<%= agent.level %>
		<%= status_agent(agent.free) %>
		<%= contracted(agent.player_id) %>
	</div>
<% end %>
